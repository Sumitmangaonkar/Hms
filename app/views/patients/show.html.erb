<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Name) %>:</strong></dt>
  <dd><%= @patient.Name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Address) %>:</strong></dt>
  <dd><%= @patient.Address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Mobile_No) %>:</strong></dt>
  <dd><%= @patient.Mobile_No %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Visit_To_Doctor) %>:</strong></dt>
  <dd><%= @patient.Visit_To_Doctor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Gender) %>:</strong></dt>
  <dd><%= @patient.Gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Age) %>:</strong></dt>
  <dd><%= @patient.Age %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              patients_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_patient_path(@patient), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              patient_path(@patient),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
